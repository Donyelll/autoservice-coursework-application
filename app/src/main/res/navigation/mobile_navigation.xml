<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/nav_profile"
        android:name="com.github.autoservicecourseworkclient.ui.profile.ProfileFragment"
        android:label="Профиль"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/nav_orders"
        android:name="com.github.autoservicecourseworkclient.ui.orders.OrdersFragment"
        android:label="Заказы"
        tools:layout="@layout/fragment_orders" />
    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.github.autoservicecourseworkclient.ui.gallery.GalleryFragment"
        android:label="О приложении"
        tools:layout="@layout/fragment_gallery" />
    <fragment
        android:id="@+id/create_order_fragment"
        android:name="com.github.autoservicecourseworkclient.ui.orders.CreateOrderFragment"
        android:label="Оформить заказ"
        tools:layout="@layout/fragment_create_order" />
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.github.autoservicecourseworkclient.ui.login.LoginFragment"
        android:label="Авторизация"
        tools:layout="@layout/fragment_login" />
    <fragment
        android:id="@+id/order_info_fragment"
        android:name="com.github.autoservicecourseworkclient.ui.orders.OrderInfoFragment"
        android:label="Информация о заказе"
        tools:layout="@layout/fragment_order_info" >
